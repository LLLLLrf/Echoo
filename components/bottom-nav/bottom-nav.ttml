<view class="bottom-nav">
  <view 
    wx:for="{{navItems}}" 
    wx:key="key"
    class="nav-item {{current === item.key ? 'active' : ''}}"
    bindtap="switchPage"
    data-key="{{item.key}}"
  >
    <view class="nav-icon">{{item.icon}}</view>
    <text class="nav-text">{{item.text}}</text>
  </view>
</view> 